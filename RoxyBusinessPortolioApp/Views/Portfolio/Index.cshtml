@model List<RoxyBusinessPortolioApp.Models.Portfolio>

<h2>Portfolio List</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Short Description</th>
                <th>Image</th>
                <th>Link</th>
                <th>Skills</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var portfolio in Model)
            {
                <tr>
                    <td>@portfolio.Title</td>
                    <td>@portfolio.ShortDesc</td>
                    <td><img src="@portfolio.Image" alt="Portfolio Image" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@portfolio.Link</td>
                    <td>
                        @if (portfolio.Skills != null && portfolio.Skills.Any())
                        {
                            foreach (var skill in portfolio.Skills)
                            {
                                <span class="badge badge-info">@skill</span>
                            }
                        }
                        else
                        {
                            <span>No Skills</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@portfolio.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@portfolio.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@portfolio.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No portfolios available.</p>
}
